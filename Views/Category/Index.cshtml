@model IEnumerable<NimapInfotech.Models.Category>
@{
    ViewBag.Title = "Category List";
}

<h2>Category List</h2>

<a href="@Url.Action("Create", "Category")" class="btn btn-primary">Create Category</a>
<table class="table">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
